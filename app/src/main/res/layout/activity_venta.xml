<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Modulo de Ventas"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:text="No. Venta"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:text="Clave Cliente"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:text="Nombre"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:text="Calle"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:text="Clave Vendedor"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginTop="180dp"
                android:text="Comision"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="570dp"
                android:layout_marginTop="16dp"
                android:text="Fecha"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/btnAgregarV"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginEnd="98dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="Agregar"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/btnModificarV"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="98dp"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:text="Modificar"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAgregarV" />

            <Button
                android:id="@+id/btnBuscarV"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="98dp"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Buscar"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnModificarV" />

            <Button
                android:id="@+id/btnBajaV"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="98dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Baja"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnBuscarV" />

            <Button
                android:id="@+id/btnConsultarV"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="98dp"
                android:backgroundTint="@android:color/holo_purple"
                android:text="Reporte"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnBajaV" />

            <EditText
                android:id="@+id/edtNoV"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Spinner
                android:id="@+id/edtClaveCliente"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/edtNoV" />

            <EditText
                android:id="@+id/edtNCVenta"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="81dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/edtClaveCliente" />

            <EditText
                android:id="@+id/edtCaCVenta"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="114dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/edtNCVenta" />

            <Spinner
                android:id="@+id/edtClaveVendedor"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/edtCaCVenta" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:text="Nombre"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/edtNVVenta"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="81dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/edtClaveVendedor" />

            <EditText
                android:id="@+id/edtComisionV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="128dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <EditText
                android:id="@+id/edtFechaV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="400dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableRow
                        android:layout_width="1278dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnConsultarV">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_blue_light"
                            android:text="Clave"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_blue_light"
                            android:text="Descripcion"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_blue_light"
                            android:text="Unidad"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_blue_light"
                            android:text="Linea"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_blue_light"
                            android:text="Cantidad"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_blue_light"
                            android:text="P. Venta"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_blue_light"
                            android:text="Importe"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/txtClave"
                            android:hint="Clave"
                            android:textAlignment="center"
                            android:textSize="34sp">

                        </TextView>

                        <TextView
                            android:id="@+id/txtDescrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Descripcion"
                            android:textAlignment="center"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/txtUnidadV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Unidad"
                            android:textAlignment="center"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/txtLineaV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Linea"
                            android:textAlignment="center"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/txtCantidadV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Cantidad"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/txtPVenta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="P. Venta"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/txtImporteV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Importe"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textSize="34sp" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="236dp"
                android:layout_marginTop="8dp"
                android:text="Producto"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <Spinner
                android:id="@+id/spnP"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/edtNVVenta" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>